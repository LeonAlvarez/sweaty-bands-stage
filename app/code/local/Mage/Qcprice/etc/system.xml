<config>
    <tabs>
        <qcprice translate="label" module="qcprice">
            <label>Quantity and Colors Price Configuration</label>
            <sort_order>300</sort_order>
        </qcprice>
    </tabs>
    <sections>
        <qcprice translate="label" module="qcprice">
            <label>Price Configuration</label>
            <tab>qcprice</tab>
            <sort_order>130</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <setup_price_config translate="label">
                    <label>Setup Price Configuration</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <setup_price translate="label">
                            <label>Setup Price per color</label>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </setup_price>
						<setup_quantity translate="label">
                            <label>Setup Price Quantity</label>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </setup_quantity>
                    </fields>
                </setup_price_config>
				<name_number_price translate="label">
                    <label>Name &amp; Number Price Configuration</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <name_price translate="label">
                            <label>Name Price per Word</label>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </name_price>
						<number_price translate="label">
                            <label>Number Price</label>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </number_price>
                    </fields>
                </name_number_price>
				<perside_color_used translate="label">
                    <label>Perside &amp; Total Color Used</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>30</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <perside_color translate="label">
                            <label>Perside Color Used</label>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </perside_color>
						<total_color translate="label">
                            <label>Total Color Used</label>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </total_color>
                    </fields>
                </perside_color_used>
				<name_number_module translate="label">
                    <label>Name &amp; Number Module</label>
                    <sort_order>40</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <name_number_enabled translate="label">
                            <label>Name &amp; Number Module Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </name_number_enabled>
                    </fields>
                </name_number_module>
            </groups>
        </qcprice>
    </sections>
</config>
