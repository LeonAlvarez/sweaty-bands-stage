<?xml version="1.0"?>
<config>
    <sections>
        <popup translate="label" module="popup">
            <label>Popup</label>
            <tab>awall</tab>
            <frontend_type>text</frontend_type>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <interface translate="label">
                    <label>Interface Settings</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <auto_hide translate="label">
                            <label>Auto hide</label>
                            <comment>seconds</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <can_be_empty>1</can_be_empty>
                        </auto_hide>
                        <default_position translate="label">
                            <label>Default Popup position</label>
                            <frontend_type>select</frontend_type>
                            <source_model>popup/source_position</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <can_be_empty>1</can_be_empty>
                        </default_position>
                        <cookies_lifetime translate="label">
                            <label>Cookies lifetime</label>
                            <comment>seconds</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <can_be_empty>1</can_be_empty>
                        </cookies_lifetime>
                    </fields>
                </interface>
            </groups>
        </popup>
    </sections>
</config>
