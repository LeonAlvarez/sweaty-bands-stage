<config>
    <modules>
        <Magestore_Design>
            <version>0.3.1</version>
        </Magestore_Design>
    </modules>

	<frontend>
	    <routers>
				<design>
					<use>standard</use>
					<args>
						<module>Magestore_Design</module>
						<frontName>design</frontName>
					</args>
				</design>
			</routers>
        <layout>
            <updates>
                <design>
                    <file>design.xml</file>
                </design>
            </updates>
        </layout>
    </frontend>   
    <global>
		
    <models>
            <design>
                <class>Magestore_Design_Model</class>
                <resourceModel>design_mysql4</resourceModel>
            </design>
            <design_mysql4>
                <class>Magestore_Design_Model_Mysql4</class>                
				<entities>
				<savedesign>
					<table>save_design</table>
				</savedesign>
				<userimage>
					<table>user_cliparts</table>
				</userimage>
				<configarea>
					<table>designtool_configarea</table>
				</configarea>
				</entities>
            </design_mysql4>
        </models>
        <resources>
            
			<design_setup>
                <setup>
                    <module>Magestore_Design</module>
			    	<class>Magestore_Design_Model_Resource_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </design_setup>
			
            <design_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </design_write>
            <design_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </design_read>
        </resources>
        <blocks>
            <design>
                <class>Magestore_Design_Block</class>
            </design>
        </blocks>
        <helpers>
            <design>
                <class>Magestore_Design_Helper</class>
            </design>
        </helpers>
		<template>
			<email>
				<friend_email_template module="design">
					<label>Friend Email Template</label>
					<file>friend_email_template.html</file>
					<type>html</type>
				</friend_email_template>
				<save_design_email_template module="design">
					<label>Save Design Template</label>
					<file>save_design_email_template.html</file>
					<type>html</type>
				</save_design_email_template>           
			</email>
		</template>
    </global>
</config>