<?xml version="1.0"?>
<layout version="0.1.0">
	<quickbuy_index_index>
		<remove name="right"/>
        <remove name="left"/>
		<reference name="head">
			<action method="setTitle">
				<params>Quick Buy</params>
			</action>
			<action method="addItem">
				<type>js_css</type>
				<name>itoris/quickbuy/css/main.css</name>
			</action>
			<action method="addJs">
				<name>itoris/quickbuy/js/quickbuy.js</name>
			</action>
		</reference>
		<reference name="content">
			<block type="itoris_quickbuy/grid" name="quickbuy_grid"/>
		</reference>
		<reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
	</quickbuy_index_index>
</layout>